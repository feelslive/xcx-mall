<view class='cart'>
    <van-empty   wx:if='{{cartArray.length == 0}}' description="购物车空空如也，去逛逛吧" />
  <view wx:else class='section'>
    <view class="section-edit" wx:if="{{isEditing}}" bindtap="changeIsEditing" data-operation="complete">完成</view>
    <view  class="section-edit" wx:else bindtap="changeIsEditing" data-operation="edit">编辑</view>
    <block wx:key="index" wx:for='{{cartArray}}'>
      <view class="good_list {{item.isTouchMove ? 'touch-move-active' : ''}}" bindtap='switchGoodDetail' data-index="{{index}}">
        <view class='content'>
          <view class='select_icon' catchtap='selectGood' data-index='{{index}}'>
            <image wx:if='{{item.select}}' src='/image/selected.png'></image>
            <image class='icon' wx:else src='/image/unselect.png'></image>
          </view>
          <view class='goods'>
            <image class='good_img' src='{{item.cover || item.loopImgUrl[0]}}'></image>
            <view class='good_info'>
              <view class='good_title'>
                <text>{{item.title}}</text>
              </view>
              <view class='good_price'>
                <text class='price'>¥{{item.price}}</text>
                <!-- 商品数量 -->
                <amount count='{{item.total}}' data-index='{{index}}' bind:myevent="onGetCount" bind:subevent='subCount' bind:addevent='addCount'></amount>
              </view>
            </view>
          </view>
        </view>
      </view>
    </block>
    <view class='fixBar'>
      <van-submit-bar wx:if="{{!isEditing}}" custom-class="custom-submit-bar"  button-class="custom-submit-button" disabled='{{totalCount < 1}}' button-text="提交订单" bind:submit="setAccount" safe-area-inset-bottom="{{false}}">
        <view class='select_all' catchtap='selectAll'>
          <image wx:if='{{selectAll}}' class='icon' src='/image/selected.png'></image>
          <image wx:else class='icon' src='/image/unselect.png'></image>
          <text>全选</text>
        </view>
        <view class='total'>
          <text>合计:</text>
          <text class='money'>¥{{totalMoney}}</text>
        </view>
      </van-submit-bar>
      <van-submit-bar wx:else custom-class="custom-submit-bar"  button-class="custom-submit-button" disabled='{{totalCount < 1}}' button-text="删除" bind:submit="delAccount" safe-area-inset-bottom="{{false}}">
        <view class='select_all' catchtap='selectAll'>
          <image wx:if='{{selectAll}}' class='icon' src='/image/selected.png'></image>
          <image wx:else class='icon' src='/image/unselect.png'></image>
          <text>全选</text>
        </view>
        <view class='total'>
          <!-- <text>合计:</text> -->
          <!-- <text class='money'>¥{{totalMoney}}</text> -->
        </view>
      </van-submit-bar>
      <!-- <view class='select_all' catchtap='selectAll'>
