page {
    background-color: #fff;
}
.indicator-wrap,
.notice {
  height: auto; 
  padding: 0 30rpx;
}
.notice {
  margin-bottom: 10rpx;
}
.van-notice-bar {
  font-size: 24rpx;
  height: 60rpx !important;
}
.swiper-item {
    display: block;
    width:100%;
    height: 440rpx;
}

.goods-panel {
  display: flex;
  flex-wrap: wrap;
  padding: 0 30rpx;
  padding-bottom: 120rpx;
  justify-content: space-between;
}

.goods-panel .good-item:nth-child(2n+1) {
