}

.distribution {
    display: flex;
    justify-content: space-between;
    padding: 0 30rpx;
    margin: 20rpx 0;
}
.distribution-item {
    width: 46%;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center;
    font-size: 28rpx;
    color: #72020a;
    border-radius: 40rpx;
    background-color: #f7f7f7;
