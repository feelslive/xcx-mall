.container {
    background-color: #fff
}

.userinfo {
    display: flex;
    /* flex-direction: column; */
    align-items: center;
    padding: 0 40rpx;
    color: #aaa;
}

.userinfo-btn {
    /* width: 128rpx;
    height: 128rpx; */
    margin: 0;
    padding: 0;
}

.userinfo-btn::after {
    border: 0;
}

.userinfo button {
    background-color: #fff
}

.userinfo-avatar {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.userinfo-nickname {
    font-size: 28rpx;
}

.userinfo-mobile {
    font-size: 24rpx;
}

.usermotto {
    margin-top: 200px;
}

.cell-item {
    border-top: 10rpx solid #f7f7f7;
}

.order {
    border-top: 20rpx solid #f7f7f7;
    border-bottom: 20rpx solid #f7f7f7;
}

.order-title {
    padding-left: 30rpx;
    margin-top: 30rpx;
    font-size: 32rpx;
}

.order-status {
    height: 140rpx;
    display: flex;
    align-items: center;
    justify-content: space-around;
    font-size: 24rpx;
    padding: 0 30rpx 10rpx;

}

.order-item {
    flex: 1;
    height: 100%;
    text-align: center;
    position: relative;
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.order-danger {
    height: 50rpx;
    position: absolute;
    top: 18rpx;
    right: 28rpx;
    z-index: 99;
}

.order-danger .van-tag--danger {
    min-width: 32rpx;
    padding: 0;
    text-align: center;
    display: block;
}

.order-item:active {
    background-color: #f7f7f7;
}

.contact-btn {
    opacity: 0;
    height: 48rpx;
}