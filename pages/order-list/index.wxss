/* pages/order-list/index.wxss */
.good_list {
    width: 100%;
    display: flex;
    flex-direction: row;
    margin-bottom: 10rpx;
    overflow: hidden;
}

.content {
    box-sizing: border-box;
    padding: 10rpx;
    width: 100%;
    display: flex;
    flex-direction: row;
    margin-right: 0;
    transition: all 0.4s;
    transform: translateX(90px);
    margin-left: -90px;
    background: #fff;
    border-radius: 8rpx;
    box-shadow: 0 1rpx 4rpx rgba(150, 150, 150, 0.3);
}
.goods {
    box-sizing: border-box;
    width: 92%;
    padding: 20rpx 0;
    display: flex;
    flex-direction: row;
}

.goods .good_img {
    width: 30%;
    height: 200rpx;
    margin-right: 10rpx;
    border: 1rpx solid #f7f7f7;
}

.good_info {
    width: 70%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.good_title {
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    margin: 10rpx 0;
    font-size: 24rpx;
}

.good_price {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.good_price .price {
    line-height: 40rpx;
    color: #72020a;
    font-weight: bold;
    font-size: 24rpx;
}