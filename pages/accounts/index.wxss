/* pages/accounts/index.wxss */
.address-list {
    padding: 30rpx;
    background-color: #fff;
    display: flex;
    align-items: center;
    margin-bottom: 10rpx;
    border-radius: 8rpx;
}

.address-left {
    flex: 1;
    padding-right: 20rpx;
    /* border-right: 1rpx solid #ccc; */
}

.address-name {
    font-size: 24rpx;
    color: #000;
    margin-bottom: 20rpx;
}

.address-info {
    font-size: 24rpx;
    color: #707070;
}

.address-edit {
    width: 80rpx;
    text-align: right;
    font-size: 24rpx;
}
.address-edit image {
    width: 24rpx;
    height: 24rpx;
}

.add-address-btn {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 20rpx 20rpx 50rpx;
    background-color: #fff;
}


.order {
    display: flex;
    flex-direction: column;
    width: 100%;
}

.sign {
    margin-top: 20rpx;
    padding: 20rpx;
    font-size: 32rpx;
    font-weight: bold;
    border-bottom: 2rpx solid #e8e8ed;
    background: #fff;
}

.prolist_item {
    background-color: #fff;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 6rpx 0;
}

.prolist_cover {
    padding: 0 30rpx;
    width: 200rpx;
    height: 200rpx;
    overflow: hidden;
}

.prolist_cover image {
    width: 100%;
    height: 100%;
    border: 0 none;
    vertical-align: top;
}

.prolist_info {
    flex: 1;
    min-height: 200rpx;
    box-sizing: border-box;
    padding: 0 20rpx 16rpx 20rpx;
    overflow: hidden;
    border-bottom: 2rpx solid #e8e8ed;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.prolist_title {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    word-break: break-all;
    text-overflow: ellipsis;
    height: 80rpx;
    overflow: hidden;
    margin-top: 16rpx;
    color: #333;
    font-size: 28rpx;
    font-weight: bold;
}

.prolist_des {
    display: flex;
    justify-content: space-between;
}

.prolist_des .price {
    color: #72020a;
    font-size: 30rpx;
}

.prolist_des .total {
    color: #aaa;
    font-size: 28rpx;
}

.payment {
    background: #fff;
    padding: 20rpx;
}

.payment .payment_item {
    display: flex;
    justify-content: space-between;
    font-size: 28rpx;
    color: #333;
    margin-bottom: 20rpx;
}

.payment_item .price,
.payment_total .price {
    color: #72020a;
}

.payment_total {
    border-top: 2rpx solid #e8e8ed;
    text-align: right;
    font-size: 32rpx;
    padding: 20rpx 0;
}

.pay_btn {
    background: #fff;
    margin-top: 40rpx;
    padding: 20rpx;
}

.pay_btn button {
    border: none;
    background: #72020a;
    color: #fff;
    font-size: 32rpx;
    padding: 10rpx 0;
}