/* components/amount/index.wxss */
.num_wrap{
  /* width: 220rpx; */
  vertical-align: middle;
  display: flex;
  flex-direction: row;
}
.num_wrap .btn{
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  background: #f7f7f7;
  text-align: center;
  border-radius: 0;
  color: #333;
  padding: 0 !important;
}
.btn::after{
  border: none;
}
.num_wrap .num_wrap_input{
  width: 60rpx;
  background: #f7f7f7;
  height: 60rpx;
  color: #333;
  font-size: 24rpx;
  text-align: center;
  border: none;
  margin: 0 2rpx;
}